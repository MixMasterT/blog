<h3>Comments</h3>

<% @article.comments.each do |comment| %>
  <p>
    <strong>Commenter:</strong>&nbsp;&nbsp;<%= comment.commenter %>
  </p>
  <p>
    <strong>Comment:</strong>&nbsp;&nbsp;<%= comment.body %>
  </p>
  <p>
    <%= link_to 'Remove Comment', [comment.article, comment], method: :delete, data: {confirm: 'Are you sure?'} %>
  </p>
<% end %>

<%= render partial: 'comment_form', locals: { article: @article } %>

<%= link_to 'Edit Article', edit_article_path(@article) %>
<%= link_to 'Back to all Articles', article_path %>